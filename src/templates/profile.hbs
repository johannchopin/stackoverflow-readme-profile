<svg version="1.1" baseProfile="full" width="300" height="86" viewBox="0 0 300 86" preserveAspectRatio="xMinYMin meet" xmlns="http://www.w3.org/2000/svg" style="overflow: visible;">
  <style>
    :root {
      --color-text: {{theme.colorText}};
      --color-bg: {{theme.colorBg}};
      --color-link: {{theme.colorLink}};
      --color-primary: {{theme.colorPrimary}};
      --color-gold: {{theme.colorGold}};
      --color-silver: {{theme.colorSilver}};
      --color-bronze: {{theme.colorBronze}};
    }
    svg {
      overflow: visible;
    }
    .ctn {
      x: 0;
      y: 0;
      rx: 5;
      ry: 5;
      fill: var(--color-bg);
      stroke-width: 2;
      stroke: var(--color-primary);
    }
    text {
      fill: {{theme.colorText}};
      font: 500 12px 'Segoe UI', Ubuntu, Sans-Serif;
    }
    .username {
      font-weight: 500;
      font-size: 16px;
    }
    .website, .location {
      font-size: 10px;
    }
    .website {
      fill: var(--color-link);
    }
  </style>

  <rect
    width="300"
    height="86"
    class="ctn"
  ></rect>
  <svg x="11" y="11" width="auto">

    {{! -- START user avatar -- }}
     <rect id="imageCtn" transform="translate(0,0)" width="64" height="64"  rx="5"/>
      <clipPath id="clip">
        <use href="#imageCtn"/>
      </clipPath>
    </defs>
    <use href="#imageCtn"/>
    <image width="64" height="64" clip-path="url(#clip)" href="{{avatar}}" />
    {{! -- EMD user avatar -- }}

    <g transform="translate(75,13)">
      <text class="username" transform="translate(0,0)">{{username}}</text>
      <g transform="translate(0,22)" style="font-weight: 800;">
        {{> rep-badges reputation=reputation badges=badges }}
      </g>
      {{#if location}}
        <g transform="translate(0,38)">
          <text class="location">{{location}}</text>
        </g>
      {{/if}}
      {{#if website}}
        <g transform="translate(0,50)">
          <text class="website">{{website}}</text>
        </g>
      {{/if}}
    </g>
  </svg>

  {{> so-icon }}
</svg>
